.account
  .account_content
    .account_content_title
      ToDo_Note
    .account_content_main
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .account_content_main_form
          .field
            .field_input
              = f.text_field :name, autofocus: true, placeholder: "name(10文字まで)", class: "field_input_text", autocomplete: "off"
          .field
            .field_input
              = f.email_field :email, placeholder: "email", class: "field_input_text", autocomplete: "off"
          .field
            .field_input
              = f.password_field :password, autocomplete: "off", placeholder: "password(英数字6文字以上)", class: "field_input_text"
          .field
            .field_input
              = f.password_field :password_confirmation, autocomplete: "off", placeholder: "password(確認)", class: "field_input_text"
          .register_btn
            = f.submit "新規作成", class: 'register_btn_text'
          = render "devise/shared/links"